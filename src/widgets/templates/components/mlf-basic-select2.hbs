{{#if view.grouped}}
  {{#each opt in view.options}}
    <optgroup {{bind-attr label=opt.group}}>
      {{#each o in opt.options}}
        {{select-option content=o}}
      {{/each}}
    </optgroup>
  {{/each}}
{{else}}
  {{#each view.options}}
    {{select-option content=this}}
  {{/each}}
{{/if}}
