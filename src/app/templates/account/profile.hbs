<form class="form-horizontal" role="form">
  <h2>个人信息</h2>
  <h4>基本信息</h4>
  <div class="form-group">
    <label class="col-sm-3 control-label">用户名</label>
    <div class="col-sm-9">
      <p class="form-control-static">{{username}}</p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label" for="realname">真实姓名</label>
    <div class="col-sm-9">
      {{input value=realname class="form-control" type="text" id="realname" placeholder="可选"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label" for="email">邮箱</label>
    <div class="col-sm-9">
      {{input value=email class="form-control" type="text" id="email" placeholder="必填且唯一"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label" for="role">角色</label>
    <div class="col-sm-9">
      <p class="form-control-static">{{pt roles scope="models.role"}}</p>
    </div>
  </div>
  <div class="form-group buttons">
    <div class="col-sm-3"></div>
    <div class="col-sm-9">
      <button class="btn btn-primary" {{action 'save'}}>
        <i class="fa fa-save"></i> 保存
      </button>
      <button class="btn btn-link" {{action 'revertChanges'}}>
        重置
      </button>
    </div>
  </div>
</form>
