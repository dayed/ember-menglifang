<ol class="breadcrumb pull-left">
  {{#each view.parentItems}}
    <li>
      {{#if model}}
        {{#link-to route model.id}}
          {{name}}
        {{/link-to}}
      {{else}}
        {{#link-to route}}
          {{name}}
        {{/link-to}}
      {{/if}}
    </li>
  {{/each}}
  <li class="active">{{view.activeItem.name}}</li>
</ol>

<ul class="links pull-right">
  {{#each view.links}}
    <li>
      {{#link-to route}}
        <i {{bind-attr class=icon}}></i>
        {{text}}
      {{/link-to}}
    </li>
  {{/each}}
</ul>
